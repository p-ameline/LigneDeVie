package com.ldv.client.canvas;

import com.google.gwt.dom.client.ImageElement;
import com.google.gwt.widgetideas.graphics.client.ImageLoader;
import com.ldv.client.model.LdvModelMandatePosition;

public class LdvIcon extends LdvObject /*implements MouseOverHandler,MouseDownHandler,MouseMoveHandler*/{

	private LdvCanvas canvas;
	private double x;
	private double y;
	private int height;
	private String name = new String("icon");
	private String[] urls = new String[] {"LDV.ICO"};
	
	public LdvIcon(LdvCanvas canvas, int x, int y, int height){
		this.canvas = canvas;
		this.x = x - 10; //make the icon appear in the right place of the mouseclick 
		this.y = y - 10;
		this.height = height;
	}
	
	public LdvIcon(LdvCanvas canvas, LdvModelMandatePosition position, int height){
		this.canvas = canvas;
		
	}
		
	public void draw() {
			    
	    ImageLoader.loadImages(urls, new ImageLoader.CallBack() {
	    	public void onImagesLoaded(ImageElement[] imageElements) {
	    	  ImageElement img = imageElements[0];  
	          canvas.drawImage(img, x, y);	        
	      }
	    });
	}
	
	@Override
	public boolean contain(double x, double y) {
		return false;
	}
	
	@Override
	public int getHeight() {
		return height;
	}

	@Override
	public String getName() {
		return this.name;
	}
	
	public void setX(double x){
		this.x = x - 10;
	}
	
	public void setY(double y){
		this.y = y - 10;
	}

	@Override
	public double getEndAngle() {
		return 0;
	}

	@Override
	public double getRadius() {
		return 0;
	}

	@Override
	public double getStartAngle() {
		return 0;
	}
	
}
